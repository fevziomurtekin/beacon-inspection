<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"

    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"

    android:paddingRight="@dimen/activity_horizontal_margin"

    android:paddingTop="@dimen/activity_vertical_margin"

    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">



    <LinearLayout

        android:orientation="vertical"

        android:layout_width="match_parent"

        android:layout_height="match_parent">



        <LinearLayout

            android:orientation="vertical"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true">



            <TextView

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:text="Dershane Uygulaması"

                android:id="@+id/textView"

                android:layout_gravity="center_horizontal"

                android:textAlignment="center"

                android:textSize="35dp"

                android:textColor="#0a0b0b"

                android:textStyle="bold"

                android:layout_marginTop="5dp" />



            <TextView

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:text="Yoklama Takibi"

                android:id="@+id/textView2"

                android:layout_gravity="center_horizontal"

                android:textSize="30dp"

                android:textColor="#0a0b0b"

                android:textStyle="bold"

                android:layout_marginTop="5dp" />



            <LinearLayout

                android:orientation="horizontal"

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:layout_gravity="center_horizontal"

                android:layout_marginTop="5dp">



                <TextView

                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"

                    android:text="Öğrenci Adı :"

                    android:id="@+id/textView3"

                    android:textSize="25dp"

                    android:textColor="#ad3208"

                    android:textStyle="bold" />



                <TextView

                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"

                    android:id="@+id/ogr"

                    android:textSize="22dp"

                    android:layout_marginLeft="3dp"

                    android:textColor="#ad3208" />



            </LinearLayout>



            <LinearLayout

                android:orientation="horizontal"

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:layout_margin="3dp">



                <TextView

                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"

                    android:text="Soyadı:"

                    android:id="@+id/textView5"

                    android:textSize="25dp"

                    android:textColor="#ad3208"

                    android:textStyle="bold" />



                <TextView

                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"

                    android:id="@+id/syd"

                    android:textSize="22dp"

                    android:layout_marginLeft="3dp"

                    android:textColor="#ad3208" />

            </LinearLayout>



            <LinearLayout

                android:orientation="vertical"

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:layout_margin="3dp">



                <LinearLayout

                    android:orientation="horizontal"

                    android:layout_width="match_parent"

                    android:layout_height="match_parent">



                    <TextView

                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"

                        android:text="Tarih :"

                        android:id="@+id/textView7"

                        android:textSize="25dp"

                        android:textColor="#ad3208"

                        android:textStyle="bold" />



                    <TextView

                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"

                        android:id="@+id/trh"

                        android:layout_marginLeft="3dp"

                        android:textSize="22dp"

                        android:textColor="#ad3208" />

                </LinearLayout>

            </LinearLayout>



            <LinearLayout

                android:orientation="vertical"

                android:layout_width="match_parent"

                android:layout_height="wrap_content">



                <LinearLayout

                    android:orientation="horizontal"

                    android:layout_width="match_parent"

                    android:layout_height="match_parent">



                    <TextView

                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"

                        android:text="Giriş Saati :"

                        android:id="@+id/textView8"

                        android:textSize="25dp"

                        android:layout_margin="3dp"

                        android:textColor="#ad3208"

                        android:textStyle="bold" />



                    <TextView

                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"

                        android:id="@+id/gs"

                        android:textSize="22dp"

                        android:layout_marginLeft="3dp"

                        android:textColor="#ad3208" />

                </LinearLayout>



                <LinearLayout

                    android:orientation="horizontal"

                    android:layout_width="match_parent"

                    android:layout_height="match_parent">



                    <TextView

                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"

                        android:text="Çıkış Saati : "

                        android:id="@+id/textView9"

                        android:textSize="25dp"

                        android:layout_margin="3dp"

                        android:textColor="#ad3208"

                        android:textStyle="bold" />



                    <TextView

                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"

                        android:id="@+id/cs"

                        android:textSize="22dp"

                        android:layout_marginLeft="3dp"

                        android:textColor="#ad3208" />

                </LinearLayout>

            </LinearLayout>



        </LinearLayout>



        <LinearLayout

            android:orientation="horizontal"

            android:layout_width="match_parent"

            android:layout_height="wrap_content">



            <Button

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:text="Geçmiş Dönem Raporları"

                android:id="@+id/button"

                android:layout_weight="1" />



        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

